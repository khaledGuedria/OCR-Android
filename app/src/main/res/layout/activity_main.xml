<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e3e3e3"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/scanicon"
            android:id="@+id/imageView" android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="28dp"/>
    <TextView
            android:text="Scan."
            android:layout_width="349dp"
            android:layout_height="68dp"
            android:id="@+id/textView"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="42dp"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <TextView
            android:text="Start by taking a picture or just import it from your storage."
            android:layout_width="348dp"
            android:layout_height="40dp"
            android:id="@+id/textView2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:textAlignment="center"/>
    <Button
            android:text="Import"
            android:background="@drawable/mybuttons"
            android:layout_width="117dp"
            android:layout_height="49dp"
            android:id="@+id/button"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="144dp"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="#FFF"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/SelectedImageView"
            android:visibility="invisible"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>